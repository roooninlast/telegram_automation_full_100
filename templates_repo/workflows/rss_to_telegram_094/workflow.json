{
  "name": "RSS → Telegram hourly #094",
  "nodes": [
    {
      "parameters": {
        "mode": "everyHour"
      },
      "id": "cron94",
      "name": "Cron",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [
        200,
        200
      ]
    },
    {
      "parameters": {
        "url": "={{$env.RSS_URL}}"
      },
      "id": "rss94",
      "name": "Fetch RSS",
      "type": "n8n-nodes-base.rssFeedRead",
      "typeVersion": 1,
      "position": [
        440,
        200
      ]
    },
    {
      "parameters": {
        "chatId": "={{$env.CHAT_ID}}",
        "text": "={{$json[\"title\"]}} — {{$json[\"link\"]}}"
      },
      "id": "tg94",
      "name": "Telegram Send",
      "type": "n8n-nodes-base.telegram",
      "typeVersion": 1,
      "position": [
        820,
        200
      ],
      "credentials": {
        "telegramApi": {
          "apiToken": "={{$env.TELEGRAM_TOKEN}}"
        }
      }
    }
  ],
  "connections": {
    "Cron": {
      "main": [
        [
          {
            "node": "Fetch RSS",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch RSS": {
      "main": [
        [
          {
            "node": "Telegram Send",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}